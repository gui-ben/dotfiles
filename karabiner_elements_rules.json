{
    "title": "option key + vocal in US keyboard = acute accented vocal (spanish accent)",
    "rules": [
        {
            "description": "left option + a = á",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "a",
                        "modifiers": {
                            "mandatory": [
                                "left_alt"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "e",
                        "modifiers": [ "left_alt" ] },
                        { "key_code": "a" }
                    ]
                }
            ]
        },
